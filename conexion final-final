import mysql.connector
conexion = mysql.connector.connect(
    user= 'root', password= 'xxxx', host= 'localhost', database= 'actividad3', port= '3306',
)
print ("conectado")


#PRUEBA DE CONEXION

cur = conexion.cursor()
cur.execute("SELECT * FROM productos")
for id_producto, nombre in cur.fetchall():
    print   (id_producto, nombre)
conexion.close()
